#!/bin/bash

# remove the lockscreen file if it exists
if [[ -f ~/.config/i3/lock.png ]]; then
    rm ~/.config/i3/lock.png
fi

# remove the extra colors file if it exists
if [[ -f ~/.cache/wal/more_colors.json ]]; then
    rm ~/.cache/wal/more_colors.json
fi

feh -q --bg-fill ~/.config/i3/wall.png

# make it your background and whatnot
wal -c
wal --backend wal -i ~/.config/i3/wall.png -q

# make the shell script executable
chmod +x ~/.cache/wal/colors.sh

# discord
wal-discord -t

# create shades and tints and stuff
more_colors
# polybar_colors > ~/.config/polybar/poly_colors

# restart polybar
polybar-msg cmd restart

# reload i3
i3-msg reload &
