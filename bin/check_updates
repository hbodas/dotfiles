#!/bin/bash

while true; do
    wget -q --tries=7 --timeout=20 --spider http://google.com
    if [[ $? -eq 0 ]]; then
        # Online
        break
    else
        # Offline
        echo "- / -"
        sleep 2
    fi
done

if [[ $1 = "-l" ]]; then
    checkupdates
    yay --aur -Qu
else
    repos=$(checkupdates | wc -l)
    aur=$(yay --aur -Pn)
    aurout="${aur:0:1}"
    # echo "$repos   $aur"
    echo "$repos ﮮ $aur"
fi



