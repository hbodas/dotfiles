/* {{{ module/date */
[module/date]
type = internal/date
interval = 1

/* time = */
time = %l:%M
time-alt = %l:%M %p
date = %b %d, 
date-alt = %a, %b %d %Y, 

label = "%date% %time%"
/* label-background = ${colors.shade3} */
label-foreground = ${colors.font_back}

/* }}} */

