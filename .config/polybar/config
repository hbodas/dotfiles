/* {{{ bar/top */
[bar/top]
; dimensions for the bar
width = 1920
height = 32

; specify the monitor to use
monitor = "eDP1"

; center
fixed-center = true

; offset
offset-x = 0
offset-y = 0

; corners
radius = 0

; location
override-redirect = false

; background and foreground
background = ${colors.background}
foreground = ${colors.foreground}

; margins around modules
padding-left = 4
padding-right = 4
module-margin = 3
/* separator = %{T3}|%{T-} */

; fonts
/* font-1 = MesloLGSDZ Nerd Font:size=8;2.5 */
/* font-0 = VictorMono Nerd Font Mono:size=11;3.25 */
font-0 = SF UI Display:size=12;3.25
font-1 = MesloLGSDZ Nerd Font:size=12;3.5
font-2 = MesloLGSDZ Nerd Font:size=13;3
font-3 = MesloLGSDZ Nerd Font:size=18;4
font-4 = Inconsolata for Powerline:size=26;5

; modules
modules-left = date i3
modules-center = spotify
modules-right = updates wlan cpu memory xbacklight volume battery 

; tray
/* tray-position = right */
/* tray-maxsize = 16 */
/* tray-padding = 2 */
/* tray-background = ${colors.background} */

; line
line-size = 2

' inter-process messaging
enable-ipc = true

/* }}} */

