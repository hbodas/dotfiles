/* {{{ module/i3 */
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
pin-workspaces = false

label-mode-padding = 0
label-mode-foreground = ${colors.font_fore}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
/* label-focused = %icon% */
label-focused = %index%
label-focused-foreground = ${colors.font_fore}
label-focused-background = ${colors.foreground}
label-focused-padding = 3

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-foreground = ${colors.font_back}
label-unfocused-background = ${colors.background}
label-unfocused-padding = 3

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.background_light}
label-visible-foreground = ${colors.font_back}
label-visible-padding = 3

; urgent = Workspace with urgency hint set
label-urgent = %index% 
label-urgent-background = ${colors.shade6}
label-urgent-padding = 3

ws-icon-0 = 1;%{T4}%{T-}
ws-icon-1 = 2;%{T4}%{T-}
ws-icon-2 = 3;%{T4}%{T-}
ws-icon-3 = 4;%{T4}%{T-}
ws-icon-4 = 5;%{T4}%{T-}
ws-icon-5 = 6;%{T4}%{T-}
ws-icon-6 = 7;%{T4}%{T-}
ws-icon-7 = 8;%{T4}%{T-}
ws-icon-8 = 9;%{T4}%{T-}
ws-icon-default = ♟
/* }}} */

